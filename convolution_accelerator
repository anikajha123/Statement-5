module conv_accelerator(
input clk,
input rst,
input start,
input [7:0] pixel_in,
output reg [15:0] result,
output reg done
);
reg [3:0] count;
reg [15:0] acc;
always @(posedge clk)
begin
done <= 0;
if (rst)
begin
acc<=0;
count<=0;
done<=0;
end
else if(start)
begin
acc <= acc + pixel_in * 16'd3;
// kernel 
count<= count + 1;
if (count == 8)
begin
result<=acc;
done<=1;
count<=0;
acc<= 0;
        end
    end
end
endmodule
